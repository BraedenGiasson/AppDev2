<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/update_address_title_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_address_title"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_address_title_ed">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/update_address_street_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_address_text"
                    android:inputType="text"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/update_address_city_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_city_text"
                    android:inputType="text"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/update_address_province_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_province_text"
                    android:inputType="text"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/update_address_country_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_country_text"
                    android:inputType="text"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="@dimen/customer_add_update_margins"-->
<!--                style="@style/LoginTextInputLayoutStyle"-->
<!--                app:boxCornerRadiusBottomEnd="10dp"-->
<!--                app:boxCornerRadiusTopEnd="10dp"-->
<!--                app:boxCornerRadiusBottomStart="10dp"-->
<!--                app:boxCornerRadiusTopStart="10dp"-->
<!--                android:textColorHint="@color/text_color"-->
<!--                app:hintTextColor="@color/secondary_text_color"-->
<!--                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"-->
<!--                tools:ignore="MissingConstraints">-->

<!--                <EditText-->
<!--                    android:id="@+id/update_address_postalcode_ed"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:autofillHints=""-->
<!--                    android:backgroundTint="#FFFFFF"-->
<!--                    android:ems="10"-->
<!--                    android:hint="@string/customer_postal_code_text"-->
<!--                    android:inputType="textPostalAddress"-->
<!--                    android:tag="name" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_update_address_btn"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/no_gradient_button"
                    android:text="@string/cancel_text"
                    android:textColor="@color/text_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update_address_btn"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_button"
                    android:text="@string/update_text"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>