<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InvoiceApp_BraedenGiasson" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/secondary_text_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/secondary_text_color</item>
        <item name="colorControlActivated">@color/secondary_text_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="spinner_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>