<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_invoice_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_invoice_detail_title_text"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_invoice_detail_title_tv">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/create_invoice_detail_product_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_invoice_detail_productname_text"
                    android:inputType="text"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/create_invoice_detail_priceperunit_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_invoice_detail_priceperunit_text"
                    android:inputType="numberDecimal"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/text_color"
                app:hintTextColor="@color/secondary_text_color"
                app:hintTextAppearance="@style/LoginTextInputLayoutStyle"
                android:layout_marginBottom="@dimen/customer_add_update_margins"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/create_invoice_detail_quantity_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:backgroundTint="@color/primary_background"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:ems="10"
                    android:hint="@string/customer_invoice_detail_quantity_text"
                    android:inputType="number"
                    android:tag="name" />
            </com.google.android.material.textfield.TextInputLayout>

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/textInputLayout2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:backgroundTint="#FFFFFF"-->
<!--                android:layout_marginBottom="@dimen/customer_add_update_margins"-->
<!--                tools:ignore="MissingConstraints">-->

<!--                <EditText-->
<!--                    android:id="@+id/create_invoice_detail_linetotal_ed"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:autofillHints=""-->
<!--                    android:backgroundTint="#FFFFFF"-->
<!--                    android:ems="10"-->
<!--                    android:hint="@string/customer_first_name_text"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:tag="name" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_create_invoice_detail_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/no_gradient_button"
                android:textColor="@color/text_color"
                android:layout_marginEnd="125dp"
                android:text="@string/cancel_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_invoice_detail_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_button"
                android:textColor="@color/black"
                android:text="@string/create_text" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>